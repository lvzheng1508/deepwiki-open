{
  "embedder": {
    "client_class": "OpenAIClient",
    "initialize_kwargs": {
      "api_key": "${OPENAI_EMBED_KEY}",
      "base_url": "${OPENAI_EMBED_URL}"
    },
    "batch_size": 10,
    "model_kwargs": {
      "model": "text-embedding-v4",
      "encoding_format": "float"
    }
  },
  "retriever": {
    "top_k": 20
  },
  "text_splitter": {
    "split_by": "word",
    "chunk_size": 350,
    "chunk_overlap": 100
  }
}